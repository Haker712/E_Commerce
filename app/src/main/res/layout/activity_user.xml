<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aceplus.e_commerce.User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="User Information"
            android:textColor="#000000"
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:background="#a1a0a0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Your Profile"
            android:textColor="#000000"
            android:textSize="15dp"
            android:onClick="toProfile"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/txtWishlist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Your WishList"
            android:textColor="#000000"
            android:textSize="15dp"
            android:onClick="toWishList"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/txtCartlist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Your Cart"
            android:textColor="#000000"
            android:textSize="15dp"
            android:onClick="toCartList"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/txtOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="Your Order History"
            android:textColor="#000000"
            android:textSize="15dp"
            android:onClick="toOrderHistory"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000" />




    </LinearLayout>

</LinearLayout>
